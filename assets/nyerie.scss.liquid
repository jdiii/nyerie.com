/* Footer customization */

.nyerie-footer {
    background-color: #f6f6f6;
    padding: 25px 75px;
}

.nyerie-footer__grid-item {
    padding-top:3em;
}

.nyerie-footer__link {
    color: black;
    cursor: pointer;
    text-decoration: none;
}

.nyerie-footer__link:hover {
    color: #808080;
}


.nyerie-footer__col-wrapper {
    padding-top:25px;
    max-width:400px;
}

.nyerie-footer__col-header {
    text-transform: uppercase;
    font-weight: light;
    font-size: small;
}

.nyerie-footer__col-text {
    padding-top: 15px;
    font-weight: extra-light;
    font-size: 20px;
}

input.input-group-field.nyerie-footer__newsletter__input, button.btn.nyerie-footer__newsletter__submit {
    font-size: 15px;
    margin-top:15px;
    padding: 5px;
    height: 30px;
}

button.btn.nyerie-footer__newsletter__submit {
    background-color: black;
    font-size:10px;
}
input.input-group-field.nyerie-footer__newsletter__input {
    background-color: white;
}

/* Product/designer page customizations */

.designer-description, .page-description {
    display: block;
	max-width: 320px;
	font-size: small;
	margin: 0 auto;
	text-align: justify;
}

.long-block {
    display: block;
    max-width: 600px;
    font-size: small;
    margin: 0 auto;
    text-align: left;

    h1 {
        font-size: medium;
        font-weight: normal;
        text-align: center;
    }
}

.grid-header__text-wrapper {
    width:100%;
    /*height:1024px;*/
    display:table;
}

.grid-header__text {
    display:table-cell;
    vertical-align:middle;
}

.grid-header__image-wrapper {
    margin-bottom: 30px;
    display: table;
    width:100%;
    text-align:center;
}

.grid-header__image {
    display: table-cell;
    vertical-align:center;
    width:100%;
}

.nyerie-footer__bottom-grid {
     text-align: center;
     padding: 90px 0 0 0;
}

a.nyerie-footer__bottom-text {
    cursor: pointer;
    font-size: 75%;
    font-weight: medium;
    color: #5e5e5e;
}
a.nyerie-footer__bottom-text:hover {
    cursor: pointer;
    color: black;
    text-decoration: none;
}

.blog-text {
    margin: 1em 0;
    /* font-size: large;*/
}

/* NEWSLETTER POPUP */
.popup {
    padding: 0;
    margin: 0;
    position: fixed;
    top: 30%;
    left: 0px;
    width: 100%;
    background: none;
    display: none;
    z-index: 1000;
}

.popup-contents {
    background-color: rgba(255,255,255,0.95);
    border: 1px solid #888;
    padding: 30px;
    box-shadow: 0px 0px 4px 2px rgba(128,128,128,0.8);
}

.popup-contents__tag {
    font-size: 18px;
    color: black;
    font-weight: normal;
}

.popup-contents__subtag, .image-caption {
    font-size: 14px;
    font-style: italic;
    color: #333;
    font-weight:light;
    padding-top:10px;
}

.popup-contents__exit {
    float: right;
    font-size: 25px;
    margin-top: -30px;
    margin-right: -12.5px;
}

.popup-contents__newsletter-form {
    /* padding-top: 20px;
     padding-bottom: 20px;*/
}

.popup-contents__no-thanks:hover {
    cursor: pointer;
    text-decoration: underline;
}

.popup-form__field {
    font-size: 15px;
    margin-top:15px;
    padding: 5px;
    height: 30px;
    width: 100%;
    border: 1px solid #ddd;
    color: #333;
}

.popup-form__submit {
    margin-top: 15px;
}

.input-group-field {
    border: 1px solid #f6f6f6;
}

.popup-content__error-response {
    color: red;
    margin-top: 15px;
}

.blog-article-header {
    margin: 2em 0em;
}
