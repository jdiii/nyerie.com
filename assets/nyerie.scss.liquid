/* Footer customization */

.nyerie-footer {
    background-color: #f6f6f6;
}

.footer-logo {
    padding:0;
    margin:0;
    font-size:small;
}

.footer-logo__img {
    max-width:100%;
    width:85px;
}

.footer__col-header {
    text-transform:uppercase;
    font-weight:bold;
    font-size:small;
}

/* Product/designer page customizations */

.designer-description {
    display: block;
	max-width:320px;
	font-size:small;
	margin: 0 auto;
	text-align: justify;

}

.grid-header__text-wrapper {
    width:100%;
    /*height:1024px;*/
    display:table;
}

.grid-header__text {
    display:table-cell;
    vertical-align:middle;
}

.grid-header__image-wrapper {
    margin-bottom: 30px;
    display: table;
    width:100%;
    text-align:center;
}

.grid-header__image {
    display: table-cell;
    vertical-align:center;
    width:100%;
}
